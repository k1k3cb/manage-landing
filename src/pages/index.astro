---
import { Image } from 'astro:assets';
import BgImage from '../assets/images/bg-tablet-pattern.svg';
import About from '../components/About.astro';
import Article from '../components/Article.astro';
import { ARTICLES } from '../data/articles';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Welcome to Astro.'>
  <figure class='absolute inset-0 overflow-hidden pointer-events-none'>
    <Image
      src={BgImage}
      alt='Background image'
      class='absolute w-full -z-10 -top-24 -right-1/4 max-w-2xl'
    />
  </figure>
  <main>
    <section
      class='wrapper text-center py-24 grid gap-12 md:grid-cols-2 md:text-left'
    >
      <article>
        <h2 class='text-3xl font-bold text-very-dark-blue mb-6 md:text-4xl'>
          Whatâ€™s different about Manage?
        </h2>

        <p class='text-dark-grayish-blue'>
          Manage provides all the functionality your team needs, without the
          complexity. Our software is tailor-made for modern digital product
          teams.
        </p>
      </article>

      <div class='grid gap-12'>
        {
          ARTICLES.map(article => (
            <Article
              number={article.number}
              title={article.title}
              content={article.content}
            />
          ))
        }
      </div>
    </section>
    <About />
  </main>
</Layout>
